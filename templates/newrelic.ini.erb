;
; This file is managed by the puppet module: <%= @module_name %>
; Any local changes will be overwritten during the next puppet run
;
; This file contains the various settings for the New Relic PHP agent. There
; are many options, all of which are described in detail at the following URL:
; https://newrelic.com/docs/php/php-agent-phpini-settings
;

extension=newrelic.so

[newrelic]
newrelic.enabled=<%= @php_agent_enable %>
newrelic.license = "<%= @newrelic_license_key -%>"
newrelic.logfile = "<%= @php_agent_logfile -%>"
newrelic.loglevel = "<%= @php_agent_loglevel -%>"
newrelic.appname = "<%= @php_agent_appname -%>"

<% if @php_daemon_agent_startup -%>
newrelic.daemon.logfile = "<%= @php_daemon_logfile -%>"
newrelic.daemon.loglevel = "<%= @php_daemon_loglevel -%>"
newrelic.daemon.max_threads = <%= @php_daemon_max_threads %>
newrelic.daemon.ssl = <%= @php_daemon_ssl %>
<% if @php_daemon_proxy -%>
newrelic.daemon.proxy = "<%= @php_daemon_proxy -%>"
<% end -%>
newrelic.daemon.pidfile = "<%= @php_daemon_pidfile -%>"
newrelic.daemon.location = "<%= @php_daemon_location -%>"
newrelic.daemon.collector_host = "<%= @php_daemon_collector_host -%>"
<% if @php_daemon_auditlog -%>
newrelic.daemon.auditlog = "<%= @php_daemon_auditlog -%>"
<% end -%>
newrelic.daemon.dont_launch = 0
<% else -%>
newrelic.daemon.dont_launch = 3
<% end -%>
newrelic.daemon.port = "<%= @php_daemon_port -%>"

newrelic.capture_params = <%= @php_agent_capture_params %>
<% if @php_agent_ignored_params -%>
newrelic.ignored_params = "<%= @php_agent_ignored_params -%>"
<% end -%>
newrelic.error_collector.enabled = <%= @php_agent_error_collector_enable %>
newrelic.error_collector.record_database_errors = <%= @php_agent_error_collector_record_database_errors %>
newrelic.error_collector.prioritize_api_errors = <%= @php_agent_error_collector_pri_api %>
newrelic.browser_monitoring.auto_instrument = <%= @php_agent_browser_mon_auto_inst %>
newrelic.transaction_tracer.enabled = <%= @php_agent_transaction_tracer_enable %>
newrelic.transaction_tracer.threshold = "<%= @php_agent_transaction_tracer_threshold -%>"
newrelic.transaction_tracer.detail = <%= @php_agent_transaction_tracer_detail -%>
newrelic.transaction_tracer.slow_sql = <%= @php_agent_transaction_tracer_slow_sql %>
newrelic.transaction_tracer.stack_trace_threshold = <%= @php_agent_transaction_tracer_stack_trace_threshold %>
newrelic.transaction_tracer.explain_enabled = <%= @php_agent_transaction_tracer_explain_enabled %>
newrelic.transaction_tracer.explain_threshold = <%= @php_agent_transaction_tracer_explain_threshold %>
newrelic.transaction_tracer.record_sql = "<%= @php_agent_transaction_tracer_record_sql -%>"
<% if @php_agent_transaction_tracer_custom -%>
newrelic.transaction_tracer.custom = "<%= @php_agent_transaction_tracer_custom -%>"
<% end -%>
newrelic.framework = "<%= @php_agent_framework -%>"
newrelic.webtransaction.name.remove_trailing_path = <%= @php_agent_webtransaction_name_remove_trailing_path %>
<% if @php_agent_webtransaction_name_functions -%>
newrelic.webtransaction.name.functions = "<%= @php_agent_webtransaction_name_functions -%>"
<% end -%>
<% if @php_agent_webtransaction_name_files -%>
newrelic.webtransaction.name.files = "<%= @php_agent_webtransaction_name_files -%>"
<% end -%>

